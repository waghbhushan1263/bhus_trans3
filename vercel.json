{
    "version": 2,
    "builds": [
      {
        "src": "api/translate.py",
        "use": "@vercel/python"
      },
      {
        "src": "public/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "api/translate.py"
      },
      {
        "src": "/(.*)",
        "dest": "public/$1"
      }
    ]
  }